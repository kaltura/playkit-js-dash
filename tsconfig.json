{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "outDir": "./lib/",
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*", "tests/**/*"]
}
